<!DOCTYPE html>
<html>
<head>
  <title>Dungeon & Dragons Helper | <%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:success] %>
<p> <%= flash[:success] %></p>
<% end %>

<% if flash[:alert] %>
<p> <%= flash[:alert] %></p>
<% end %>

<% if flash[:warning] %>
<p> <%= flash[:warning] %></p>
<% end %>

<% if flash[:danger] %>
<p> <%= flash[:danger] %></p>
<% end %>

<%= yield %>

</body>
</html>
