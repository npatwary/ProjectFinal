<% if @game.errors.any? %>
<div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
</div>
<% end %>
<h1>New Game</h1>
<div>
	<%= form_for(@game) do |f| %>
	<div class='form-group'>
	    <%= f.label :name,'Game Name:',class: "col-sm-2 control-label"%>
	    <div class="col-sm-10">
	    	<%= f.text_field :name,  class: 'form-control'%>
		</div>
	</div>
	<div class='form-group'>
	    <%= f.label :game_password,'Game Password:',class: "col-sm-2 control-label"%>
	    <div class="col-sm-10">
	    	<%= f.password_field :game_password,  class: 'form-control'%>
	    </div>
	</div>
	<div class='form-group'>
	    <%= f.label :map,'Game Map:',class: "col-sm-2 control-label"%>
	    <div class="col-sm-10">
	    	<%= f.file_field :map,  class: 'form-control'%>
	    </div>
	</div>
	<div class='form-group'>
	    <%= f.label :game_history,'Game History:',class: "col-sm-2 control-label"%>
	    <div class="col-sm-3">
	    	<%= f.text_area :game_history, :size=>"50x2", class: 'form-control'%>
	    </div>
	</div>
	<div class="form-group">
    	<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit "Create Game" %>&nbsp;<%= button_tag "Reset", type: :reset %>
		</div>
	</div>
	<% end %>
</div>	

<div class="col-sm-11">
	<hr>
	<%= link_to "Go to User Home page",user_path(current_user) %>
</div>