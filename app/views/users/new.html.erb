<% provide(:title, 'Sign-up') %>

Welcome to the Dungens and Dragons game !


<table border = "0">
	<%= form_for(@user) do |f| %>
		<tr>
			<td><%= f.label :user_name %>
			<%= f.text_field :user_name %></td>
		</tr>
		<tr>
			<td><%= f.label :email %>
			<%= f.email_field :email %></td>
		</tr>
		<tr>
			<td><%= f.label :password %>
			<%= f.password_field :password %></td>
		</tr>
		<tr>
			<td><%= f.label :password_conformation %>
				<%= f.password_field :password_conformation %></td>
		</tr>
		<tr>
			<td><%= f.submit "Create Account" %>
				<%= f.button "Reset",:type => 'reset'%></td>
		</tr>

	<% end %>
</table>
<hr>
<%= link_to "Home", root_path %>