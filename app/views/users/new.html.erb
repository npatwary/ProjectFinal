<% provide(:title, 'Sign-up') %>

Welcome to the Dungens and Dragons game !


<table border = "0">
	<%= form_for(@user) do |f| %>
		<tr>
			<td><%= f.label :user_name %></td>
			<td><%= f.text_field :user_name %></td>
		</tr>
		<tr>
			<td><%= f.label :email %></td>
			<td><%= f.email_field :email %></td>
		</tr>
		<tr>
			<td><%= f.label :password %></td>
			<td><%= f.password_field :password %></td>
		</tr>
		<tr>
			<td><%= f.label 'Confirmation' %></td>
				<td><%= f.password_field :password_confirmation %></td>
		</tr>
		<tr>
			<td><%= f.submit "Create Account" %></td>
			<td>&nbsp;&nbsp;<%= button_tag  "Reset", type: :reset %></td>
		</tr>
		<tr>
			<td> <%= button_tag  "Log In:" %></td>
		</tr>
	<% end %>
</table>
<hr>
<%= link_to "Home", root_path %>