<% content_for :content do %>

<p id="notice"><%= notice %></p>

<h1>View Characters</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Class</th>
      <th>Level</th>
      <th>Background</th>
      <th>Race</th>
      <th>Alignment</th>
      <th>Experiencepoints</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_characters.each do |player_character| %>
      <tr>
        <td><%= player_character.name %></td>
        <td><%= player_character.classDnD %></td>
        <td><%= player_character.level %></td>
        <td><%= player_character.background %></td>
        <td><%= player_character.race %></td>
        <td><%= player_character.alignment %></td>
        <td><%= player_character.experiencePoints %></td>

        <td><%= link_to 'Show', player_character %></td>
        <td><%= link_to 'Edit', edit_player_character_path(player_character) %></td>
        <td><%= link_to 'Destroy', player_character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player character', new_player_character_path %>

<% end %>